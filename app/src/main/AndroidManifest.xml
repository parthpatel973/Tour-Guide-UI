<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tourguide">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TourGuide">
        <activity
            android:name=".BottomNavigation"
            android:exported="true" />
        <activity android:name=".Password_Updated" />
        <activity android:name=".SetNewPassword" />
        <activity android:name=".MakeSelection" />
        <activity android:name=".ForgotPassword" />
        <activity
            android:name=".otp_screen"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".SignUp_Screen3"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity android:name=".SignUp_Screen2" />
        <activity
            android:name=".SignUp"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".login"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".RegisterScreen" />
        <activity android:name=".AllCategory" />
        <activity android:name=".Dashboard" />
        <activity android:name=".OnBoarding" />
        <activity
            android:name=".GuideActivity"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>